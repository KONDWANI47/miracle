ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WHATSAPP_INTEGRATION=true

# Development Settings (only for development)
DEBUG_MODE=false
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_DETAILED_ERRORS=false
