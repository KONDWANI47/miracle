# Server Configuration
NODE_ENV=production
PORT=3000
BASE_URL=https://miracleecd.com

# Database Configuration
DB_HOST=localhost
DB_USER=miracle_ecd_user
DB_PASSWORD=your_secure_password
DB_NAME=miracle_ecd

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Session Secret
